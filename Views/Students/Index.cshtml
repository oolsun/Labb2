@model List<Labb2.Models.Student>

@{
    ViewData["Title"] = "Elever och Lärare";
}

<h1>Elever och Lärare</h1>

<table class="table">
    <thead>
        <tr>
            <th>Elevens namn</th>
            <th>Lärarens namn</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            @if (student.Enrollments != null && student.Enrollments.Any())
            {
                @foreach (var enrollment in student.Enrollments)
                {
                    <tr>
                        <td>@(enrollment == student.Enrollments.First() ? student.StudentName : "")</td>
                        <td>@enrollment.Subject?.Teacher?.TeacherName ?? "N/A"</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>@student.StudentName</td>
                    <td>N/A</td>
                </tr>
            }
        }
    </tbody>
</table>